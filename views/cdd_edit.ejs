<%- include layouts/user_header.ejs %>
<style>
    .modalpost {
        z-index: 0;
        list-style-type: none;
    }
</style>
<div class="container blog-content">

    <div class="row">

        <div class="col-sm-8 blog-main">

            <div class="row">
                <div class="col-sm-12">
                    <section class="blog-post">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <h1 class="blog-post-title">Edición de perfil</h1>
                                </div>
                                <div class="blog-post-content">
                                    <form action="/cdd/edit" method="POST">
                                        <label for="userame">Usuario</label>
                                        <input type="text" class="form-control" name="username" value="<% if(data.username){%><%= data.username%><%}%>">
                                        <label for="correo">Correo</label>
                                        <input type="text" class="form-control" name="correo" value="<% if(data.correo){%><%= data.correo%><%}%>">
                                        <label for="name">Nombre</label>
                                        <input type="text" class="form-control" name="name" value="<% if(data.name){%><%= data.name%><%}%>">
                                        <label for="ape">Apellido</label>
                                        <input type="text" class="form-control" name="ape" value="<% if(data.apellido){%><%= data.apellido%><%}%>">
                                        <label for="fnac">Fecha de Naciento</label>
                                        <input type="date" class="form-control" name="fnac" value="<% if(data.fnac){%><%= data.fnac%><%}%>">
                                        <label for="gend">Género</label>
                                        <select class="form-control" name="gend">
                                            <option value="1">F</option>
                                            <option value="0">M</option>
                                        </select>
                                        <div class="form-group form-inline pull-right">
                                            <a type="submit" class="form-control btn btn-danger">Cancelar</a>
                                            <button type="submit" class="form-control btn btn-primary">Guardar cambios</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <nav>
                <ul class="pager">
                    <li><a class="withripple" href="#">Next</a></li>
                </ul>
            </nav>

        </div><!-- /.blog-main -->

        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">

            <div class="sidebar-module">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>Elsewhere</h4>
                        <ol class="list-unstyled">
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Google+</a></li>
                            <li><a href="#">Twitter</a></li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.sidebar-module -->

        </div><!-- /.blog-sidebar -->

    </div><!-- /.row -->

</div><!-- /.container -->
<%- include layouts/cdd_footer.ejs %>