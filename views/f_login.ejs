<body>

<div class="navbar navbar-material-blog navbar-primary navbar-fixed-top">

    <div class="navbar-image" style="background-image: url('/assets/img/unsplash-1.jpg');background-position: center 40%;"></div>

    <div class="navbar-wrapper container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <a href="#"><img class="navbar-brand material-icons" src="/assets/img/iso_iso.png"></a>
            <ul class="nav navbar-nav">
                <li class="active dropdown">
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">Conectado como <%= usr.username%></a></li>
                <li><a href="/user_logout">Salir</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container blog-content">

    <div class="row">

        <div class="col-sm-12 blog-main">

            <div class="row">
                <div class="col-sm-12">
                    <section class="blog-post">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <h1 class="blog-post-title">Completa tu perfil</h1>
                                </div>
                                <div class="blog-post-content">
                                    <form action="/cdd/edit_f" method="POST">
                                        <label for="userame">Usuario</label>
                                        <input type="text" class="form-control" name="username" value="<% if(data.username){%><%= data.username%><%}%>" required>
                                        <label for="pass">Contraseña</label>
                                        <div class="input-group">
                                            <input type="password" onkeyup="check()" class="form-control" id="pass" name="pass" required>
                                            <span class="input-group-addon glyphicon glyphicon-remove" id="span"></span>
                                        </div>
                                        <label for="pass2">Vuelva a escribir la contraseña</label>
                                        <div class="input-group">
                                            <input type="password" onkeyup="check()" class="form-control" id="pass2" name="pass2" required>
                                            <span class="input-group-addon glyphicon glyphicon-remove" id="span2"></span>
                                        </div>
                                        <label for="correo">Correo</label>
                                        <input type="text" class="form-control" name="correo" value="<% if(data.correo){%><%= data.correo%><%}%>" required>
                                        <label for="name">Nombre</label>
                                        <input type="text" class="form-control" name="name" required>
                                        <label for="ape">Apellido</label>
                                        <input type="text" class="form-control" name="ape" required>
                                        <label for="fnac">Fecha de Naciento</label>
                                        <input type="date" class="form-control" name="fnac" required>
                                        <label for="gend">Género</label>
                                        <select class="form-control" name="gend">
                                            <option value="1" >F</option>
                                            <option value="0" >M</option>
                                        </select>
                                        <div class="form-group form-inline pull-right">
                                            <button type="submit" id="savedit" class="form-control btn btn-primary" disabled>Guardar y continuar</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

        </div><!-- /.blog-main -->
    </div><!-- /.row -->

</div><!-- /.container -->



<footer class="blog-footer">

    <div id="links">
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    <i class="material-icons brand">&#xE871;</i>
                    <p> Versión 1.3</p>
