<%- include ../../layouts/admin_header.ejs %>
    <h3 class="page-header">Crear Evento</h3>
    <div class="col-md-8 col-md-offset-2">
        <form class="form" action='/evnt/add' method="POST">
            <div class=form-group>
                <label for="nom">Nombre Evento</label>
                <input type="text" class="form-control" name="nombre" required>
                <div class="form-inline" style="margin-top: 10px">
                <label for="nom">N° Etapas</label>
                <input type="number" class="form-control" name="etapas" onchange="toks(this.value)" onkeyup="toks(this.value)" required>
                <label for="fono">N° likes/etapa</label>
                <input type="number" class="form-control" name="likes" required>
                    <label for="fono">N° nuevos/etapa</label>
                    <input type="number" class="form-control" name="nuevos" required>
                </div>
            </div>
            <div class="form-group" id="success">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary pull-right" id="submit" type="submit">Crear</button>
            </div>
        </form>
    </div>
<script type="text/javascript">
    function toks(val){
        $("#success").html("");
        if(val > 0){
            $("#submit").attr("disabled",false);
            for(var i=0;i<val;i++){
                $("#success").append('<h2 style="margin-top: 20px"> Etapa ' + (i+1) + '</h2>');
                $("#success").append('<label for="noms">Nombre Etapa</label><input type="text" name="noms" class="form-control">')
                $("#success").append('<label for="texto1">Pregunta 1</label>\n' + '<input type="text"  class="form-control" name="texto1" required>'
                    + '<label for="texto2">Pregunta 2</label>\n' + '<input type="text"  class="form-control" name="texto2" required>');
            }
        } else {
            $("#success").append('<h2 style="margin-top: 20px"> Se necesita al menos una etapa</h2>');
            $("#submit").attr("disabled",true);
        }
    }
</script>
