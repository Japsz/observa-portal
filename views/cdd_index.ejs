<%- include layouts/user_header.ejs %>
<style>
    .modalpost {
        z-index: 0;
        list-style-type: none;
    }

</style>
<div class="container blog-content">
    <div class="row">

        <div class="col-sm-8 blog-main">
            <ul class="menu boxed clearfix modalpost" aria-hidden="true">
                <li><img src="/assets/img/isov_iso.png" height="84px" height="auto"></li>
                <li><a href="#" data-toggle="modal" data-target="#aa" data-tipo="1" class="poster"><i class="menu-icon"></i>Idea</a></li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#aa" data-tipo="2" class="poster"><i class="menu-icon menu-icon-5"></i>Escrito</a>
                </li>
                <li>
                    <a class="poster" href="#" data-toggle="modal" data-target="#aa" data-tipo="3"><i class="menu-icon menu-icon-7"></i>Imagen</a>
                </li>
                <li>
                    <a class="poster" href="#" data-toggle="modal" data-target="#aa" data-tipo="4"><i class="menu-icon menu-icon-6"></i>Video</a>
                </li>
            </ul>
            <div class="row">
                <div class="col-sm-12">
<% if(data.length) {
    var f_gen;
    for(var i = 0;i<data.length;i++){
        f_gen = new Date(data[i].fecha);
        f_gen = f_gen.toLocaleString();
        switch(data[i].tipo) {
            case 1:
                %><section class="blog-post">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="blog-post-meta" id="<%= data[i].idpost%>">
                                    <input class="hidden" value="<%= data[i].tags%>" data-id="<%= data[i].idpost%>">
                                    <p class="blog-post-date pull-right"><%= f_gen%></p>
                                </div>
                                <div class="blog-post-content">
                                    <a href="/post/<%= data[i].idpost%>">
                                        <h2 class="blog-post-title"><%= data[i].t_principal%></h2>
                                    </a>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <a class="comm col-xs-2" data-id="<%= data[i].idpost%>" href="/post/<%= data[i].idpost%>">
                                            <i class="glyphicon glyphicon-comment"></i>
                                        </a>
                                        <a class="laik col-xs-2" data-id="<%= data[i].idpost%>" href="#">
                                            <i class="glyphicon glyphicon-thumbs-up"> <%= data[i].likes%></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section><%
                break;
            case 2:
                %><section class="blog-post">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <div id="<%= data[i].idpost%>">
                                        <input class="hidden" value="<%= data[i].tagz%>" data-id="<%= data[i].idpost%>">
                                        <p class="blog-post-date pull-right"><%= f_gen%></p>
                                    </div>
                                </div>
                                <div class="blog-post-content">
                                    <a href="/post/<%= data[i].idpost%>">
                                        <h2 class="blog-post-title"><%= data[i].t_principal%></h2>
                                    </a>
                                    <p><%- data[i].contenido%></p>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <a class="comm col-xs-2" data-id="<%= data[i].idpost%>" href="/post/<%= data[i].idpost%>">
                                            <i class="glyphicon glyphicon-comment"></i>
                                        </a>
                                        <a class="laik col-xs-2" data-id="<%= data[i].idpost%>" href="#">
                                            <i class="glyphicon glyphicon-thumbs-up"></i> <%= data[i].likes%>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section><%

                break;
            case 3:
                %><section class="blog-post">
                        <div class="panel panel-default">
                            <img src="<%= data[i].t_principal%>" width="auto" class="img-responsive">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <div id="<%= data[i].idpost%>">
                                        <input class="hidden" value="<%= data[i].tagz%>" data-id="<%= data[i].idpost%>">
                                        <p class="blog-post-date pull-right"><%= f_gen%></p>
                                    </div>
                                </div>
                                <div class="blog-post-content">
                                    <p><%- data[i].contenido%></p>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <a class="comm col-xs-1" data-id="<%= data[i].idpost%>" href="/post/<%= data[i].idpost%>">
                                            <i class="glyphicon glyphicon-comment"></i>
                                        </a>
                                        <a class="laik col-xs-1" data-id="<%= data[i].idpost%>" href="#">
                                            <i class="glyphicon glyphicon-thumbs-up"></i><%= data[i].likes%>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section><%
                break;
            case 4:
                %><section class="blog-post">
                        <div class="panel panel-default">
                            <iframe width="100%" height="372" src="https://www.youtube.com/embed/<%= data[i].t_principal%>?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen=""></iframe>
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <div id="<%= data[i].idpost%>">
                                        <input class="hidden" value="<%= data[i].tagz%>" data-id="<%= data[i].idpost%>">
                                        <p class="blog-post-date pull-right"><%= f_gen%></p>
                                    </div>
                                </div>
                                <div class="blog-post-content">
                                    <p ><%- data[i].contenido%></p>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <a class="comm col-xs-1" data-id="<%= data[i].idpost%>" href="/post/<%= data[i].idpost%>">
                                            <i class="glyphicon glyphicon-comment"></i>
                                        </a>
                                        <a class="laik col-xs-1" data-id="<%= data[i].idpost%>" href="#">
                                            <i class="glyphicon glyphicon-thumbs-up"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
<%
                break;
            default:
                status = "inactivo";
        }
    }
} else {%>
<p> No hay posts</p>
<% } %>
                </div>
            </div>

            <nav>
                <ul class="pager">
                    <li><a class="withripple" href="#">Next</a></li>
                </ul>
            </nav>

        </div><!-- /.blog-main -->


<%- include layouts/cdd_footer.ejs %>