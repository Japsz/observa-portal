<script type="text/javascript">
    $.material.init();
    $('body').materialScrollTop();
    var ispass, isusr;

    function check() {
        if($("#pass").val() == "" || $("#pass").val() != $("#pass2").val()){

            ispass=false;
            $("#savedit").attr("disabled", true);
            $("#span").removeClass("glyphicon-ok");
            $("#span2").removeClass("glyphicon-ok");
            $("#span").addClass("glyphicon-remove");
            $("#span2").addClass("glyphicon-remove");
            $("#checkpass").removeClass("hidden");
            $("#checkpass").removeClass("alert-success");
            $('#checkpass').addClass("alert-danger");
            $('#checkpass').html("<i class='glyphicon glyphicon-remove'></i> <strong>No Coinciden!</strong> rayos, las contraseñas no son iguales.");

        } else {
            ispass = true;
            if(isusr) $("#savedit").attr("disabled", true);
            $("#savedit").attr("disabled", false);
            $("#span").removeClass("glyphicon-remove");
            $("#span2").removeClass("glyphicon-remove");
            $("#span").addClass("glyphicon-ok");
            $("#span2").addClass("glyphicon-ok");
            $("#checkpass").removeClass("alert-danger");
            $('#checkpass').addClass("alert-success");
            $('#checkpass').html("<i class='glyphicon glyphicon-ok'></i>  <strong>Coinciden!</strong> no la olvides.");


        }
    }
    function checkusr (e) {
        var data = { usr: e.value }
        $("#checkusr").removeClass("hidden");
        if(data.usr.split("@").length > 1){
            isusr = false;
            $("#savedit").attr("disabled", true);
            $("#checkusr").removeClass("alert-danger");
            $('#checkusr').removeClass("alert-success");
            $('#checkusr').addClass("alert-warning");
            $('#checkusr').html("<i class='glyphicon glyphicon-warning-sign'></i>  <strong>Sin caracteres especiales!</strong> No se pueden usar '@'.");
        } else if(data.usr == ""){
            isusr = false;
            $("#savedit").attr("disabled", true)
            $("#checkusr").removeClass("alert-danger");
            $('#checkusr').removeClass("alert-success");
            $('#checkusr').addClass("alert-warning");
            $('#checkusr').html("<i class='glyphicon glyphicon-info-sign'></i>  <strong>Sin Ideas?</strong> " +

               "" +
                ".");
        } else {
            $(function(){
                $.ajax({
                    type: 'POST',
                    data: JSON.stringify({username: e.value}),
                    contentType: 'application/json',
                    url: '/check_usr',
                    success: function(data) {
                        if(data == "si"){
                            if(ispass) {
                                $("#savedit").attr("disabled", false);
                            }
                            isusr = true;
                            $("#checkusr").removeClass("alert-warning");
                            $("#checkusr").removeClass("alert-danger");
                            $('#checkusr').addClass("alert-success");
                            $('#checkusr').html("<i class='glyphicon glyphicon-ok'></i> <strong>Bien!</strong> el nombre de usuario está disponible.");

                        } else {
                            isusr = false;
                            $("#savedit").attr("disabled", true);
                            $("#checkusr").removeClass("alert-warning");
                            $('#checkusr').removeClass("alert-success");
                            $("#checkusr").addClass("alert-danger");
                            $('#checkusr').html("<i class='glyphicon glyphicon-remove'></i> <strong>Ocupado!</strong> rayos, intenta con otro.");
                        }
                    }
                });
            });

        }
    }
    function upload(e){

        if (!e.files) {
            alert("This browser doesn't seem to support the `files` property of file inputs.");
        }
        else if (!e.files[0]) {
            alert("Please select a file before clicking 'Load'");
        }
        else {
            var formData = new FormData();
            formData.append("filetoupload", e.files[0]);
            $(function (){
                $.ajax({
                    url: '/subir_pic',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    type: 'POST',
                    success: function(data){
                        $("#preview").html("<img width='60px' height='auto' class='img-circle img-responsive' src='" + data + "' >");
                        $("#avat").val(data);
                    }
                })
            });
        }

    }

</script>
