<%- include layouts/user_header %>

<div class="container blog-content">
    <div class="row">

        <div class="col-sm-8 blog-main">
            <div class="row">
                <div class="col-sm-12">
<% if(data.length) {
    var f_gen,estado;
    for(var i = 0;i<data.length;i++){
        f_gen = new Date(data[i].fecha);
        f_gen = f_gen.toLocaleString();
        switch(data[i].estado){
            case 1:
                estado = "<a class='btn btn-warning'>Aprovación Pendiente</a>";
                break;
            case 2:
                estado = "<a class='btn btn-success'>Aprovado</a>";
                break;
            case 3:
                estado = "<a class='btn btn-danger'>Rechazado</a><a class='btn btn-warning edit' data-toggle='modal' data-target='#aa' data-tipo='" + data[i].tipo
                        + "' data-tit='" + data[i].t_principal + "' data-cont='" + data[i].contenido + "' data-tags='" + data[i].tags + "' data-idpost = '" + data[i].idpost + "'><i class='glyphicon glyphicon-wrench'></i></a>";
                break;
        }
        switch(data[i].tipo) {
            case 1:
                %><section class="blog-post" id="<%= data[i].idpost %>">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <input class="hidden" value="<%= data[i].tags%>" data-id="<%= data[i].idpost%>">
                                    <p class="blog-post-date pull-right"><%= f_gen%></p>
                                </div>
                                <div class="blog-post-content">
                                    <a href="/post/<%= data[i].idpost%>">
                                        <h2 class="blog-post-title"><%= data[i].t_principal%></h2>
                                    </a>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>

                                    <div class="blog-post-share pull-right">
                                        <%- estado%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section><%
                break;
            case 2:
                %><section class="blog-post" id="<%= data[i].idpost%>">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <input class="hidden" value="<%= data[i].tagz %>" data-id="<%= data[i].idpost%>">
                                    <p class="blog-post-date pull-right"><%= f_gen%></p>
                                </div>
                                <div class="blog-post-content">
                                    <a href="/post/<%= data[i].idpost%>">
                                        <h2 class="blog-post-title"><%= data[i].t_principal%></h2>
                                    </a>
                                    <p><%- data[i].contenido%></p>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <%- estado%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section><%
                break;
            case 3:
                %><section class="blog-post" id="<%= data[i].idpost %>">
                        <div class="panel panel-default">
                            <img src="<%= data[i].t_principal%>" width="auto" class="img-responsive">
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <input class="hidden" value="<%= data[i].tagz%>" data-id="<%= data[i].idpost%>">
                                    <p class="blog-post-date pull-right"><%= f_gen%></p>
                                </div>
                                <div class="blog-post-content">
                                    <p><%- data[i].contenido%></p>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <%- estado%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section><%
                break;
            case 4:
                %><section class="blog-post" id="<%= data[i].idpost %>">
                        <div class="panel panel-default">
                            <iframe width="100%" height="372" src="https://www.youtube.com/embed/<%= data[i].t_principal%>?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen=""></iframe>
                            <div class="panel-body">
                                <div class="blog-post-meta">
                                    <input class="hidden" value="<%= data[i].tagz%>" data-id="<%= data[i].idpost%>">
                                    <p class="blog-post-date pull-right"><%= f_gen%></p>
                                </div>
                                <div class="blog-post-content">
                                    <p ><%- data[i].contenido%></p>
                                    <a class="blog-post-share pull-left" href="#">
                                        Creado por: <%= data[i].username%>
                                    </a>
                                    <div class="blog-post-share pull-right">
                                        <%- estado%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
<%
                break;
            default:
                status = "inactivo";
        }
    }
} else {%>
<p> No hay posts</p>
<% } %>
                    <div id="next">
                        <nav>
                            <ul class="pager">
                                <input type="hidden" value="<% if(data.length){%><%= data[data.length-1].idpost%><%}%>" id="idpst">
                                <li><a class="withripple strim" href="#">Más</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

        </div><!-- /.blog-main -->


